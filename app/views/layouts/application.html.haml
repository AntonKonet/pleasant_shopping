%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    %title PleasantShopping
  %body
    .header
      .right_panel
        .cart
          = render partial: 'shared/cart_link'
        - if User.current_user.blank?
          .button
            = link_to t('defaults.sign_up'), new_invitation_path
        .button
          = login_logout_link
    .container
      = yield
